{
  "compilerOptions": {
    /* プロジェクト */
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",

    /* 言語と環境 */
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "jsx": "preserve",
    "moduleDetection": "force",

    /* モジュール */
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,

    /* JavaScript サポート */
    "allowJs": true,
    "checkJs": true,

    /* Emit */
    "noEmit": true,

    /* システム連携の制約事項 */
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,

    /* 型チェック */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    /* 完全性 */
    "skipLibCheck": true,

    /* プラグイン */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  /* 型チェックの対象ファイル */
  "include": [
    "eslint.config.mjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "postcss.config.mjs",
    ".prettier.config.mjs"
  ],

  /* 除外するファイル */
  "exclude": ["node_modules", ".next", "dist"]
}
